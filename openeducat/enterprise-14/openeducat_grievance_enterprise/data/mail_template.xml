        <record id="mail_template_gms" model="mail.template">
            <field name="name">Send Email</field>
            <field name="subject">"${object.subject|safe}"</field>
            <field name="email_from">"${object.company_id.email|safe}"</field>
            <field name="email_to">${object.get_emails()}</field>
            <field name="lang">${user.lang}</field>
            <field name="model_id" ref="openeducat_grievance_enterprise.model_grievance"/>
            <field name="auto_delete" eval="True"/>
